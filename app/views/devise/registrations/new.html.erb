<div id="sign-form">
	<div class="modal-header">
		<h2>注册</h2>
	</div>
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<div class="modal-body">
		<%= f.input :email, :required => true, :autofocus => true, :placeholder => "邮箱" %>
		<%= f.input :password, :required => true, :id => "password", :placeholder => "密码",
					:class => "password" %>
		<%= f.input :password_confirmation, :required => true, :placeholder => "密码确认" ,
					:class => "password_confirmation" %>
	</div>
	<div class="modal-footer">
		<%= f.button :submit, "注册", :class => "btn btn-primary" %>
		<span>｜已经有帐号了？</span>
		<%= link_to "登录", new_session_path(resource_name) %>
	</div>
	<% end %>	
</div>
<div id="sign-form">
	<h2>忘记密码?</h2>
	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	<%= f.input :email, :required => true, :placeholder => "新密码" %>
	<div class="submit">
		<%= f.button :submit, "重置密码", :class => "btn btn-primary btn-large" %>
	</div>
	<% end %>
</div>
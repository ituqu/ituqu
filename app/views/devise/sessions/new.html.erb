<div id="sign-form">
	<h2>登录</h2>
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<%= f.input :email, :input_html => {class: "required email", autofocus: true, 
							placeholder: "邮箱", id: "text" } %>
	<%= f.input :password, :input_html => {minlength: "6", placeholder: "密码", id: "text"} %>
	<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
	<div class="submit">
		<%= f.button :submit, "登录", :class => "btn btn-primary btn-large" %>
		<span class="fenge">|</span>
		<%= link_to "忘记密码?", new_password_path(resource_name) %>
		<span class="fenge">|</span>
		<%= link_to "注册", new_registration_path(resource_name) %>
	</div>
	<% end %>
</div>





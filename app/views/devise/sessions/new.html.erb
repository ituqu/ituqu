<div id="sign-form">
	<div class="modal-header">
		<h2>登录</h2>
	</div>
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="modal-body">
		<%= f.input :email, :required => true, :autofocus => true, :placeholder => "邮箱", :class => "required", :id => "cemail" %>
		<%= f.input :password, :required => true, :placeholder => "密码" %>
		<%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
	</div>
	<div class="modal-footer">
		<%= f.button :submit, "登录", :class => "btn btn-primary" %>
	 	<span class="fenge">|</span>
	 	<%= link_to "忘记密码?", new_password_path(resource_name) %>
	 	<span class="fenge">|</span>
	 	<%= link_to "注册", new_registration_path(resource_name) %>
	</div>
	<% end %>
</div>




